{
  "name": "loveyou-backend",
  "version": "1.0.0",
  "description": "Backend API for Loveyou - Contraceptive pill tracker and menstrual cycle monitoring app",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "migrate": "npx sequelize-cli db:migrate",
    "migrate:undo": "npx sequelize-cli db:migrate:undo",
    "seed": "npx sequelize-cli db:seed:all",
    "seed:undo": "npx sequelize-cli db:seed:undo:all",
    "db:create": "npx sequelize-cli db:create",
    "db:drop": "npx sequelize-cli db:drop",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "setup": "npm install && npm run db:create && npm run migrate",
    "services": "node scripts/listServices.js",
    "health": "curl http://localhost:3001/api/health || echo 'Server not running'"
  },
  "keywords": [
    "contraceptive",
    "pill-tracker",
    "menstrual-cycle",
    "health",
    "women-health",
    "api",
    "nodejs",
    "express",
    "mysql",
    "sequelize",
    "authentication-service",
    "pill-management",
    "cycle-tracking",
    "health-analytics",
    "database-service"
  ],
  "author": "LoveYou Team",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.1",
    "express-validator": "^7.0.1",
    "helmet": "^7.2.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.29.4",
    "moment-timezone": "^0.5.43",
    "morgan": "^1.10.1",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.14.3",
    "nodemailer": "^6.9.7",
    "sequelize": "^6.37.7",
    "sharp": "^0.32.6"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.1.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.0",
    "sequelize-cli": "^6.6.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/loveyou-team/loveyou-backend.git"
  },
  "bugs": {
    "url": "https://github.com/loveyou-team/loveyou-backend/issues"
  },
  "homepage": "https://github.com/loveyou-team/loveyou-backend#readme",
  "services": {
    "authentication": {
      "description": "JWT-based user authentication and profile management",
      "endpoints": ["/api/auth/*"],
      "features": ["registration", "login", "profile-management", "password-reset"]
    },
    "pill-management": {
      "description": "Contraceptive pill types and user pill management",
      "endpoints": ["/api/pills/*"],
      "features": ["pill-types", "user-pills", "pill-schedules", "notifications"]
    },
    "intake-tracking": {
      "description": "Daily pill intake recording and history",
      "endpoints": ["/api/intake/*"],
      "features": ["intake-logging", "missed-pills", "adherence-tracking"]
    },
    "cycle-monitoring": {
      "description": "Menstrual cycle tracking and predictions",
      "endpoints": ["/api/cycles/*"],
      "features": ["cycle-logging", "period-tracking", "cycle-predictions", "symptoms"]
    },
    "analytics": {
      "description": "Health insights and pattern analysis",
      "endpoints": ["/api/analytics/*"],
      "features": ["pattern-analysis", "health-insights", "trend-reports"]
    },
    "database": {
      "description": "Database management and health monitoring",
      "endpoints": ["/api/database/*"],
      "features": ["health-checks", "data-export", "admin-tools"]
    }
  }
}
